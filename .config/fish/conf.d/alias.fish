alias ls='ls -a --color=auto --group-directories-first'
alias py="python"
alias q="exit"
alias yay="yay --aur"
alias untar="tar -xvf"
alias cal='cal -m'
alias xclip='xclip -selection clipboard'
alias scrcpy='scrcpy --shortcut-mod=lalt'
alias decolor='sed -r "s/\x1B\[([0-9]{1,3}(;[0-9]{1,2})?)?[mGK]//g"'
alias activate='source .venv/bin/activate.fish'
alias youtube-dl-music='youtube-dl --extract-audio --audio-format mp3 --audio-quality 5 -o "%(title)s.%(ext)s"'
alias feh='feh --scale-down'
alias rcon='rcon -c ~/.config/rcon/rcon.yaml'
